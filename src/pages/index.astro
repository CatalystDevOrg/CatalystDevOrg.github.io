---
import { Image } from "astro:assets";

import Layout from "../layouts/Layout.astro";
import InstallLinks from "../components/InstallLinks";

import Preview from "../assets/browser-preview.png";
import Glow from "../assets/glow.png";
---

<Layout title="Browser">
  <div class="w-full h-[calc(100vh-64px)] overflow-hidden">
    <div
      class="text-center w-full px-8 h-full flex flex-col items-center justify-center"
    >
      <div class="flex flex-col gap-8 items-center justify-center flex-grow">
        <div class="flex flex-col items-center justify-center">
          <h2 class="text-5xl">Surf the web with the</h2>
          <h1 class="text-6xl">
            Browser of the <wbr />
            <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-mint-400 to-cyan-300"
            >
              Future
            </span>
          </h1>
        </div>

        <InstallLinks />
      </div>

      <Image
        src={Preview}
        alt="Screenshot of Catalyst"
        width={1200}
        class="short:hidden rounded-t-md w-[85%] min-w-[650px] max-w-[1200px]"
      />
    </div>

    <Image
      src={Glow}
      alt="Glow"
      width={1200}
      class="fixed bottom-0 translate-y-[50%] left-[50%] translate-x-[-50%] -z-10 scale-[175%] w-[80vw] min-w-[650px] max-w-[1200px]"
    />
  </div>
</Layout>
